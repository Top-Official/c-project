num = int(input("Give a number: "))

n = num+1

for i in range(0,n):
    for j in range(1,n):
        for k in range(1, j + 1):
            print("*", end="")
        print("")
    for a in range(n, 1, -1):
        for b in range(1, a - 1):
            print("*", end="")
        print("")
    n -= 1
    n = n+1
